{
  "name": "cartridge-accounting",
  "version": "1.0.0",
  "description": "cartridge accounting system",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "start1": "cross-env NODE_ENV=production node server.js",
    "server": "nodemon server.js",
    "client": "npm run start --prefix client",
    "client:install": "npm install --prefix client",
    "client:build": "npm run build --prefix client",
    "dev": "cross-env NODE_ENV=development concurrently \"npm run server\" \"npm run client\"",
    "heroku-postbuild": "cd client && npm install --only=dev && npm install && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/int1bh/cartridge-accounting.git"
  },
  "author": "Alexandr Dryagin",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/int1bh/cartridge-accounting/issues"
  },
  "homepage": "https://github.com/int1bh/cartridge-accounting#readme",
  "dependencies": {
    "body-parser": "^1.19.0",
    "config": "^3.3.6",
    "express": "^4.17.1",
    "jshint": "^2.12.0",
    "mongoose": "^5.12.1"
  },
  "devDependencies": {
    "concurrently": "^6.0.0",
    "cross-env": "^7.0.3",
    "nodemon": "^2.0.7"
  }
}
